<div class="m-4">
  <div class="text-xl mb-4">Water Logs</div>

  <%= if !Enum.any?(@logs) do %>
    You haven't made any logs yet. Do it!
  <% end %>

  <div>
    <%= for log <- @logs do %>
      <div class="mt-3">
        <%= link(
          log.name,
          to: water_log_path(ClientWeb.Endpoint, :show, log.id)
        ) %>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link(
      "New log",
      to: water_log_path(ClientWeb.Endpoint, :new),
      class: "button mt-4",
      data: [role: "new-water-log"]
    ) %>
  </div>
</div>
