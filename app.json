{
  "name": "homepage",
  "scripts": {
  },
  "env": {
    "SECRET_KEY_BASE": {
      "required": true
    },
    "POOL_SIZE": {
      "value": "18"
    },
    "MIX_ENV": {
      "required": true
    },
    "TEST_USER_PASSWORD": {
      "required": true
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "EMONCMS_API_KEY": {
      "required": true
    },
    "TWITCH_CLIENT_ID": {
      "required": true
    },
    "TWITCH_CLIENT_SECRET": {
      "required": true
    },
    "TWITCH_REDIRECT_URI": {
      "required": true
    },
    "TWITCH_DATASTORE_DISABLED": {
      "value": "true"
    },
    "SENTRY_DSN": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-postgresql",
      "as": "TWITCH_DATABASE"
    },
    "heroku-redis"
  ],
  "stack": "heroku-18",
  "buildpacks": [
    {
      "url": "https://buildpack-registry.s3.amazonaws.com/buildpacks/hashnuke/elixir.tgz"
    },
    {
      "url": "https://github.com/gjaldon/heroku-buildpack-phoenix-static.git"
    }
  ]
}
